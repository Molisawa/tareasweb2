{{> header}}

<div class="row gap-1 pt-5">
    {{#each articles}}
    <div class="col-12-sm col-4-md col-3-lg">
        <div class="card m-2">
            <img class="card-image-top" src="{{urlToImage}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{description}}</p>
                <a href="/detail?detail={{url}}&img={{urlToImage}}" class="btn btn-primary mt-3">Ver mas</a>
            </div>
        </div>
    </div>
    {{/each}}

</div>


